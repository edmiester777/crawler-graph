    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run crawler",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": ["-crawl", "--workers=16"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Run query",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": ["-query", "--domain=facebook.com"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src"
        }
    ]
}